<h1>My Reviewed Wines</h1>

<ul>
<% if current_user %>
  <% current_user.reviews.each do |r|%>
    <li><strong><%= link_to r.wine.name, wine_path(r.wine_id) %></strong>(Rating:<%=r.rating%>) "<%= r.notes%>"</li>
     (<%= r.updated_at.strftime("%m/%d/%Y") %>)
     <br>
     <%= link_to "Edit Review", edit_review_path(r)%> | <%= link_to "Delete Review", r, method: :delete%>
     <br>
     <br>
  <% end %>
<% end %>
</ul>



