<% if @review.wine %>
<h1>New Review for <%= @review.wine.name %></h1>
<% else %>
<h1>New Review</h1>
<% end %>

<%= render partial: "layouts/errors", locals: {object: @review} %>

<%= form_for([@review.wine,@review]) do |f|%>

  <% if !@review.wine %>
    <%= f.label :wine %>
    <%= f.collection_select :wine_id, Wine.all, :id, :name %>
  <% else %>
    <%= f.hidden_field :wine_id %>
  <% end %>
  <br>
  <br>
  <%= f.label :rating %>
  <%= f.text_field :rating %>
  <br>
  <br>
  <%= f.label :notes %>
  <%= f.text_area :notes %>
  <br>
  <br>
  <%= f.submit %>

<% end %>  