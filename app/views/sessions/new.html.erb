<h1>Welcome to VinoVault!</h1>
<br>
<h2>Sign In (or  <%= link_to "Sign In with Google", '/auth/google_oauth2' %>)</h2>

<%= flash[:message] if flash[:message] %>

<%= form_for :user do |f| %>
<br>
<%= f.label :username %>
<%= f.text_field :username, required:true %>
<br>
<br>
<%= f.label :password %>
<%= f.password_field :password, required:true %>
<br>
<br>
<%= f.submit "Submit" %>

<% end %>
<br>
<h2>Don't have an account?  Sign up <%=link_to "here!", signup_path %></h2>



     